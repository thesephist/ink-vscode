{
	"name": "Ink",
	"scopeName": "source.ink",
	"patterns": [
		{
			"include": "#expression"
		},
		{
			"include": "#comment"
		}
	],
	"repository": {
		"expression": {
			"patterns": [
				{
					"include": "#operator"
				},
				{
					"include": "#identifier"
				},
				{
					"include": "#booleanliteral"
				},
				{
					"include": "#numberliteral"
				},
				{
					"include": "#stringliteral"
				}
			]
		},
		"operator": {
			"name": "keyword.operator",
			"match": "\b(:|->|~|+|-|*|/|%|&|\\||^|<|>|=|.|:=|::|=>)\b"
		},
		"identifier": {
			"name": "variable",
			"match": "\b([A-Za-z@!?][A-Za-z0-9@!?]*|_)\b"
		},
		"booleanliteral": {
			"name": "constant.language",
			"match": "true|false"
		},
		"numberliteral": {
			"name": "constant.numeric",
			"match": "\b\\d+(\\.\\d*)\b"
		},
		"stringliteral": {
			"name": "string.quoted",
			"begin": "'",
			"end": "'"
		},
		"comment": {
			"name": "comment",
			"begin": "`",
			"end": "`"
		}
	}
}